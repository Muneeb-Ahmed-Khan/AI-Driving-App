<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1F1F1"
    android:layout_height="match_parent">

    <!-- Toolbar -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#D1D4D9"
        android:elevation="4dp">

        <!-- Profile image on the left side -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:background="@drawable/profile"
            android:contentDescription="TODO"
            android:padding="8dp"
            android:src="@drawable/profile"
            tools:ignore="ContentDescription,HardcodedText" />

        <!-- Welcome text with user's name -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="@string/welcome_jonee_doen"
            android:textColor="@android:color/black"
            android:textSize="22sp" /> <!-- Replace "John Doe" with the actual user's name -->

        <!-- Notification bell icon on the right side -->
        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:contentDescription="TODO"
            android:padding="8dp"
            android:src="@drawable/notification"
            tools:ignore="ContentDescription,HardcodedText" />

        <!-- Hamburger icon below the notification icon -->


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_above="@+id/null"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="213dp"
        android:background="#E2EcEB"
        android:orientation="horizontal">

        <!-- First TextView for "NEWS!" with bold font -->

        <!-- Second TextView for the actual news -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />


        <!-- Third TextView for "Posted number of hours ago" in blue color -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/actual_news_goes_here"
            android:textColor="#000000" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="27dp"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="2dp"
            android:padding="4dp"
            android:text="@string/posted_number_of_hours_ago"
            android:textColor="#0000FF" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="333dp"
        android:layout_height="139dp"
        android:background="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="159dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="255dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.371"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.454"
            app:srcCompat="@drawable/bulb" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#D1D4D9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="162dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/profile_menu" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="119dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="87dp"
        app:srcCompat="@drawable/settings" />

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="358dp">

        <ImageView
            android:id="@+id/imageView6"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/Stop_Sign" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="98dp"
        android:layout_height="82dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="356dp">

        <ImageView
            android:id="@+id/imageView8"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/map" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="88dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="358dp">

        <ImageView
            android:id="@+id/imageView9"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/files" />
    </FrameLayout>


</RelativeLayout>

