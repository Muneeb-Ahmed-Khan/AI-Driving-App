<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F1F1F1"
    android:layout_height="match_parent">

    <!-- Toolbar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="5dp"
        android:background="@drawable/mainactivity_bottom_menu">

        <!-- Left side: Welcome message -->
        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Welcome, User!"
            android:textColor="@android:color/black"
            android:textSize="26sp"/>

        <!-- Right side: Notification and Hamburger icons -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="39dp"
        android:elevation="40dp"
        android:layout_marginBottom="489dp"
        android:background="@drawable/mainactivity_bulb_layout"
        android:orientation="horizontal">

        <!-- First TextView for "NEWS!" with bold font -->

        <!-- Second TextView for the actual news -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:textStyle="bold" />


        <!-- Third TextView for "Posted number of hours ago" in blue color -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/actual_news_goes_here"
            android:textColor="#000000" />

        <TextView
            android:layout_width="447dp"
            android:layout_height="30dp"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="2dp"

            android:paddingRight="4dp"
            android:text="@string/posted_number_of_hours_ago"
            android:textColor="#0000FF" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="327dp"
        android:layout_height="119dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="180dp"

        android:background="@drawable/mainactivity_bulb_layout">

        <ImageView
            android:id="@+id/learnQuizBulb"
            android:layout_width="284dp"
            android:layout_height="171dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.372"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bulb" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="151dp"
        android:text="LEARN-QUIZ"
        android:textColor="#000000" />

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="358dp"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/signDetectionOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@drawable/mainactivity_bulb_layout"
            app:srcCompat="@drawable/stopsign"
            android:contentDescription="TODO" />
        />
    </FrameLayout>

    <FrameLayout
        android:layout_width="98dp"
        android:layout_height="82dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="356dp">

        <ImageView
            android:id="@+id/nearby_driving_school"
            android:background="@drawable/mainactivity_bulb_layout"
            android:layout_width="wrap_content"
            android:elevation="10dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/map" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="88dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="358dp">

        <ImageView
            android:id="@+id/roadGuard"
            android:background="@drawable/mainactivity_bulb_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:onClick="onRoadGuardClick"
            app:srcCompat="@drawable/files" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mainactivity_bottom_menu"
        android:layout_gravity="center"
        android:elevation="20dp">

        <!-- Home Icon -->
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/homePageIcon"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home Icon"
            android:padding="8dp"/>

        <!-- Chatbot Icon -->

        <!-- Settings Icon -->
        <ImageView
            android:id="@+id/chatBotIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/chatbot_icon"
            android:onClick="onChatBotIconClick"
            android:padding="8dp"
            android:src="@drawable/chatbot" />

        <!-- Profile Icon -->
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/profileIcon"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile_menu"
            android:contentDescription="Profile Icon"
            android:onClick="onProfileIconClick"
            android:padding="8dp"/>
    </LinearLayout>

</RelativeLayout>



