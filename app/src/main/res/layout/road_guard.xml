<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E7E7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/signImageView2"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="338dp"
        android:scaleType="fitCenter"
        android:src="@drawable/road_guard" />

    <TextView
        android:id="@+id/road_guard"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="273dp"
        android:gravity="center"
        android:text="Road Guard"
        android:textColor="#333333"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/road_guard_description"
        android:layout_width="269dp"
        android:layout_height="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="498dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="74dp"
        android:text="Easily report the road issues with mobile app: Patholes,debris,or traffic  incidents.Improve safety and infrastructure, by sharing real-time concens."
        android:textColor="#333333"
        android:textSize="16sp" />

</RelativeLayout>
